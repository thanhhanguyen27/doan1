<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/graylight"
        android:layout_height="716dp"
        android:orientation="vertical">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout11"
            android:layout_marginTop="5dp"
            android:background="#ffff"
            android:layout_width="match_parent"
            android:layout_marginBottom="8dp"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageDevice"
                android:layout_width="120dp"
                android:layout_height="96dp"
                android:background="#FFFFFF"
                tools:src="@tools:sample /avatars"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints" />

            <EditText
                android:id="@+id/edtDeviceName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:gravity="center"
                android:textSize="16dp"
                android:background="@drawable/boder"
                android:textColor="#00b686"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageDevice"
                tools:ignore="MissingConstraints" />

        </androidx.constraintlayout.widget.ConstraintLayout>

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:background="#ffff"
            android:id="@+id/layout1"
            android:layout_width="match_parent"
            android:layout_marginTop="0dp"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout11"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/linearLayout5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints">

                <LinearLayout
                    style="@style/input_info_layout"
                    android:layout_marginStart="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginEnd="0dp"
                    android:layout_marginRight="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        style="@style/input_info_title"
                        android:text="Id" />

                    <EditText
                        android:id="@+id/edtDeviceId"
                        style="@style/input_info_edit_text" />
                </LinearLayout>

                <LinearLayout
                    style="@style/input_info_layout"
                    android:layout_marginStart="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginEnd="0dp"
                    android:layout_marginRight="16dp">

                    <TextView
                        style="@style/input_info_title"
                        android:text="Mã thiết bị" />

                    <EditText
                        android:id="@+id/edtDeviceCode"
                        style="@style/input_info_edit_text" />
                </LinearLayout>

                <LinearLayout
                    style="@style/input_info_layout"
                    android:layout_marginStart="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginEnd="0dp"
                    android:layout_marginRight="16dp">

                    <TextView
                        style="@style/input_info_title"
                        android:text="Loại" />

                    <EditText
                        android:id="@+id/edtType"
                        style="@style/input_info_edit_text" />
                </LinearLayout>

                <LinearLayout
                    style="@style/input_info_layout"
                    android:layout_marginStart="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginEnd="0dp"
                    android:layout_marginRight="16dp">

                    <TextView
                        style="@style/input_info_title"
                        android:text="Xuất xứ" />

                    <EditText
                        android:id="@+id/edtOrigin"
                        style="@style/input_info_edit_text" />
                </LinearLayout>

                <LinearLayout
                    style="@style/input_info_layout"
                    android:layout_marginStart="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginEnd="0dp"
                    android:layout_marginRight="16dp">

                    <TextView
                        style="@style/input_info_title"
                        android:text="Nhà sản xuất" />

                    <EditText
                        android:id="@+id/edtManufacturer"
                        style="@style/input_info_edit_text" />
                </LinearLayout>

                <LinearLayout
                    style="@style/input_info_layout"
                    android:layout_marginStart="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginEnd="0dp"
                    android:layout_marginRight="16dp">

                    <TextView
                        style="@style/input_info_title"
                        android:text="Địa điểm" />

                    <EditText
                        android:id="@+id/edtLocation"
                        style="@style/input_info_edit_text" />
                </LinearLayout>

                <LinearLayout
                    style="@style/input_info_layout"
                    android:layout_marginStart="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginEnd="0dp"
                    android:layout_marginRight="16dp">

                    <TextView
                        style="@style/input_info_title"
                        android:text="Ngày bắt đầu" />

                    <EditText
                        android:id="@+id/edtTimeStart"
                        style="@style/input_info_edit_text" />
                </LinearLayout>

                <LinearLayout
                    style="@style/input_info_layout"
                    android:layout_marginStart="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginEnd="0dp"
                    android:layout_marginRight="16dp">

                    <TextView
                        style="@style/input_info_title"
                        android:text="Ngày kết thúc" />

                    <EditText
                        android:id="@+id/edtTimeEnd"
                        style="@style/input_info_edit_text" />
                </LinearLayout>

                <LinearLayout
                    style="@style/input_info_layout"
                    android:layout_marginStart="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginEnd="0dp"
                    android:layout_marginRight="16dp">

                    <TextView
                        style="@style/input_info_title"
                        android:text="Trạng thái" />

                    <EditText
                        android:id="@+id/edtStatus"
                        style="@style/input_info_edit_text" />
                </LinearLayout>

            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>

        <Button
            android:id="@+id/buttonUpdate"
            android:layout_width="396dp"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:layout_gravity="center"
            android:background="@drawable/coner2"
            android:text="Cập nhật"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layout1"
            tools:ignore="MissingConstraints" />
            </LinearLayout>


    </LinearLayout>
    </ScrollView>
</layout>